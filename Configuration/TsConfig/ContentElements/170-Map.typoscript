//=========================================================
// Add contentElement to Wizard
//=========================================================
mod.wizards.newContentElement.wizardItems.common {
    elements {
        rkwtemplate_map {
            iconIdentifier = rkw-template-map
            title = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.title
            description = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.description
            tt_content_defValues {
                CType = rkwtemplate_map
            }
        }
    }
    show := addToList(rkwtemplate_map)
}

//=========================================================
// Change some fields
//=========================================================
TCEFORM.tt_content {

    header_layout {
        types.rkwtemplate_map {
            removeItems = 1,2,3,100

            altLabels.0 = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.type.I.0
            altLabels.4 = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.type.I.4
            altLabels.5 = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.type.I.5
            addItems.6 = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.type.I.6
            addItems.7 = LLL:EXT:rkw_template/Resources/Private/Language/locallang_db.xlf:contentElement.map.type.I.7

        }
    }
}
