            20000 = TEXT
            20000 {
                value = {$plugin.tx_rkwtemplate_themeconfig.paths.default.templates}/EventDetail.html
            }
        }

        partialRootPaths {
            10 = {$plugin.tx_rkwtemplate_themeconfig.paths.default.partials}
        }

        layoutRootPaths {
            10 = {$plugin.tx_rkwtemplate_themeconfig.paths.default.layouts}
        }
    }
