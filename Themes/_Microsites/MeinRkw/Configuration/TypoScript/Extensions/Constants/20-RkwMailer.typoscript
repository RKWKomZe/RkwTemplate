module.tx_rkwmailer {

    view {
        partialRootPaths >
        partialRootPaths {
            0 = {$plugin.tx_rkwtemplate_themeconfig.paths.extensions.root}/RkwMailer/Partials
        }
    }

    settings {

        // Page for redirect plugin
        redirectPid = 3786

        // Delay for redirect
        redirectDelay = 0

        // Link plugin for pixel counter (HTML-mails only)
        counterPixelPid = 3786
    }
}

plugin.tx_rkwmailer < module.tx_rkwmailer